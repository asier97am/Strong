<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/lineaIzd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/lineaDerecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:text="@string/app_name"
        android:textSize="30dp"
        app:layout_constraintEnd_toStartOf="@+id/lineaDerecha"
        app:layout_constraintStart_toStartOf="@+id/lineaIzd"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Sobre ti"
        android:textSize="50dp"
        app:layout_constraintEnd_toStartOf="@+id/lineaDerecha"
        app:layout_constraintHorizontal_bias="0.121"
        app:layout_constraintStart_toStartOf="@+id/lineaIzd"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Texto sin importancia, cambiar mas adelante."
        app:layout_constraintEnd_toStartOf="@+id/lineaDerecha"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toStartOf="@+id/lineaIzd"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <RadioGroup
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toStartOf="@+id/lineaDerecha"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/lineaIzd"
        app:layout_constraintTop_toBottomOf="@+id/textView9"

        >

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="162dp"
            android:layout_height="match_parent"
            android:text="Activo" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="165dp"
            android:layout_height="match_parent"
            android:text="Principiante"

            />
    </RadioGroup>


</androidx.constraintlayout.widget.ConstraintLayout>