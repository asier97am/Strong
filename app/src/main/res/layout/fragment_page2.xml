<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Page2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.Page1"
    android:background="@drawable/prueba">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.95" />

    <View
        android:id="@+id/viewAlpha"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradiente"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/backView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="fondo"></ImageView>

    <TextView
        android:id="@+id/tvPerfil"
        android:layout_width="297dp"
        android:layout_height="64dp"
        android:fontFamily="@font/aeonikbold"
        android:gravity="left"
        android:text="Perfil"
        android:textColor="@color/blancoApp"
        android:textSize="45sp"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/guideline4" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilNombre"
        style="@style/textInputLayout"
        android:layout_marginTop="80dp"
        app:layout_constraintEnd_toEndOf="@+id/guideline3"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/guideline4">

        <!-- EditText nombre de usuario -->
        <EditText
            android:id="@+id/etNombre"
            style="@style/editText"
            android:background="@color/transparente"
            android:hint="Nombre de usuario"
            tools:ignore="SpeakableTextPresentCheck"
            android:inputType="text"></EditText>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- TextInputLayout email -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilApellidos"
        style="@style/textInputLayout"
        app:layout_constraintEnd_toEndOf="@+id/guideline3"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/tilNombre">

        <!-- EditText email -->
        <EditText
            android:id="@+id/etApellidos"
            style="@style/editText"
            android:background="@color/transparente"
            android:hint="Apellidos"
            tools:ignore="SpeakableTextPresentCheck"
            android:inputType="textEmailAddress"></EditText>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- TextInputLayout contraseña -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilEdad"
        style="@style/textInputLayout"
        app:layout_constraintEnd_toEndOf="@+id/guideline3"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/tilApellidos">

        <!-- EditText contraseña -->
        <EditText
            android:id="@+id/etEdad"
            style="@style/editText"
            android:background="@color/transparente"
            android:hint="Edad"
            android:inputType="number"
            tools:ignore="SpeakableTextPresentCheck"></EditText>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- TextInputLayout repite contraseña -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilPeso"
        style="@style/textInputLayout"
        app:layout_constraintEnd_toEndOf="@+id/guideline3"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/tilEdad">

        <!-- EditText repite contraseña -->
        <EditText
            android:id="@+id/etPeso"
            style="@style/editText"
            android:background="@color/transparente"
            android:hint="Peso"
            android:inputType="numberDecimal"
            tools:ignore="SpeakableTextPresentCheck"></EditText>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- TextInputLayout repite contraseña -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilAltura"
        style="@style/textInputLayout"
        app:layout_constraintEnd_toEndOf="@+id/guideline3"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/tilPeso">

        <!-- EditText repite contraseña -->
        <EditText
            android:id="@+id/etAltura"
            style="@style/editText"
            android:background="@color/transparente"
            android:hint="Altura"
            android:inputType="numberDecimal"
            tools:ignore="SpeakableTextPresentCheck"></EditText>
    </com.google.android.material.textfield.TextInputLayout>

    <RadioGroup
        android:id="@+id/radioGroup2"
        style="@style/fondoBotones"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"

        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/tilAltura">

        <RadioButton
            android:id="@+id/radioButton7"
            style="@style/seleccionBotones"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Hombre"
            />

        <RadioButton
            android:id="@+id/radioButton8"
            style="@style/seleccionBotones"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:text="Mujer" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/radioGroup"
        style="@style/fondoBotones"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@id/radioGroup2"
        android:layout_marginTop="8dp"
        >

        <RadioButton
            android:id="@+id/radioButton1"
            style="@style/seleccionBotones"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Soy activo" />

        <RadioButton
            android:id="@+id/radioButton2"
            style="@style/seleccionBotones"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="Soy principiante" />

    </RadioGroup>
    <TableRow
        android:id="@+id/radioGroup3"
        style="@style/fondoBotones"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@id/radioGroup">

        <TextView
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:text="Entreno habitualmente"
            android:gravity="center|left"
            android:textSize="10sp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/blancoApp">
        </TextView>
        <TextView
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:text="Soy Sedentario"
            android:textSize="10sp"
            android:gravity="center|left"
            android:layout_marginLeft="10dp"
            android:textColor="@color/blancoApp">
        </TextView>
    </TableRow>


</androidx.constraintlayout.widget.ConstraintLayout>