<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/negroApp"
    android:orientation="vertical"
    android:layout_marginTop="20dp"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/negroApp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/fotoEjercicio"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/biceps1">
        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvEjercicio"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:text="Nombre"
                android:fontFamily="@font/bebasneueregular"
                android:textColor="@color/verdeApp"
                android:textSize="40sp">

            </TextView>

            <TextView
                android:id="@+id/tvDescripcion"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:text="Descripcion"
                android:fontFamily="@font/aeonikbold"

                android:textColor="@color/blancoApp"
                android:textSize="16sp">

            </TextView>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/verdeApp">

    </TextView>


</LinearLayout>