<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- BOTONES -->

    <!-- Button verde -->
    <style name="botonVerde" >
        <item name="android:backgroundTint">@color/verdeApp</item>
        <item name="cornerRadius">15dp</item>
        <item name="android:state_pressed">true</item>
        <item name="android:textColor">@color/blancoApp</item>
        <item name="fontFamily">@font/aeonikbold</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="strokeColor">@color/blancoApp</item>
    </style>

    <!-- Button transparente -->
    <style name="botonNegro" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="alpha">1</item>
        <item name="android:state_pressed">true</item>
        <item name="cornerRadius">15dp</item>
        <item name="android:textColor">@color/blancoApp</item>
        <item name="fontFamily">@font/aeonikbold</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="strokeColor">@color/verdeApp</item>
    </style>

    <!-- PARTE DE LA SELECCION DE BOTONES-->
    <!-- Seleccion de botones-->
    <style name="seleccionBotones">
        <item name="android:gravity">center</item>
        <item name="android:drawableRight">@android:drawable/btn_radio</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/verdeApp</item>
        <item name="fontFamily">@font/aeonikbold</item>
    </style>

    <!-- Fondo y estilo del contorno de los botones.-->
    <style name="fondoBotones">
        <item name="android:background">@color/negroApp</item>

    </style>


</resources>