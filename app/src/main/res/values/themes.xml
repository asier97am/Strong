<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Strong" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/verdeApp</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="Theme.SinBarra" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <!-- Color del hint de los textVieww. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="bottomNavigationStyle">@style/BottomNavigation</item>

    </style>


    <style name="Theme.SinBarra.NoActionBar">
        <item name="colorOnPrimary">@color/blancoApp</item>
        <item name="colorPrimary">@color/verdeApp</item>
    </style>

    <style name="Theme.Alert" parent="ThemeOverlay.AppCompat.Light"
        ><item name="colorPrimary">@color/verdeApp</item></style>

    <style name="Theme.SinBarra.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="Theme.SinBarra.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="BottomNavigation">
        <item name="itemIconTint">@color/bottomselector</item>
        <item name="android:background">@color/negroApp</item>
        <item name="itemTextColor">@color/bottomselector</item>
    </style>


</resources>